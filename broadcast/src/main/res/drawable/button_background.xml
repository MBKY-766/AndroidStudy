<!-- res/drawable/button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- 渐变背景（深蓝到蓝） -->
            <gradient
                android:startColor="#FF1E88E5"
                android:endColor="#FF0D47A1"
                android:angle="270" />
            <!-- 圆角 -->
            <corners android:radius="8dp" />
            <!-- 边框 -->
            <stroke
                android:width="1dp"
                android:color="#FF0D47A1" />
        </shape>
    </item>
    <!-- 默认状态 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FF42A5F5"
                android:endColor="#FF1976D2"
                android:angle="270" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#FF1976D2" />
        </shape>
    </item>
</selector>
