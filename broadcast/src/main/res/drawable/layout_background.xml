<!-- res/drawable/layout_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 浅灰色渐变背景 -->
    <gradient
        android:startColor="#FFF5F5F5"
        android:endColor="#FFEEEEEE"
        android:angle="90" />
    <!-- 圆角 -->
    <corners android:radius="12dp" />
    <!-- 浅灰色边框 -->
    <stroke
        android:width="1dp"
        android:color="#FFE0E0E0" />
    <!-- 内边距（避免内容紧贴边缘） -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />
</shape>
